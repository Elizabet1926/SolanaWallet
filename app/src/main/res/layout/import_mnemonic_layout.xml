<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <WebView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/webView"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ImportAccountFromMnemonic"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mnemonic"
        android:hint="mnemonic input"
        android:text="tomato sad dinosaur icon eye task move steel imitate worry brass world"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/account_detail"
        android:hint="waiting import..."
        android:text=""/>

    <Button
        android:layout_marginTop="20dp"
        android:text="ImportAccountFromMnemonic"
        android:textAllCaps="false"
        android:id="@+id/btn_importAccountFromMnemonic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>