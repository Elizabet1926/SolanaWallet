<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <WebView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/webView"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="getTokenAccountsByOwner"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:hint="address input"
        android:text="5tzFkiKscXHK5ZXCGbXZxdw7gTjjD1mBwuoFbhUvuAi9"/>


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/account_detail"
        android:hint="waiting..."
        />

    <Button
        android:layout_marginTop="20dp"
        android:text="getTokenAccountsByOwner"
        android:textAllCaps="false"
        android:id="@+id/btn_getTokenAccountsByOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>